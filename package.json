{
    "name": "bergson",
    "main": "index.js",
    "version": "0.15.0",
    "description": "Time and scheduling for the web",
    "author": "Colin Clark",
    "homepage": "http://github.com/colinbdclark/bergson",
    "repository": {
        "type": "git",
        "url": "git://github.com/colinbdclark/bergson.git"
    },
    "bugs": "http://github.com/colinbdclark/bergson/issues",
    "license": "(MIT OR GPL-2.0)",
    "keywords": [
        "music",
        "audio",
        "video",
        "scheduling"
    ],
    "readmeFilename": "README.md",
    "devDependencies": {
        "fluid-grunt-eslint": "18.1.2",
        "fluid-testem": "2.1.15",
        "grunt": "1.6.1",
        "grunt-contrib-clean": "2.0.1",
        "grunt-contrib-concat": "2.1.0",
        "grunt-contrib-uglify": "5.2.2",
        "node-jqunit": "1.1.9",
        "nyc": "15.1.0",
        "sheep-benchmark": "colinbdclark/sheep.js",
        "testem": "3.10.1"
    },
    "dependencies": {
        "infusion": "4.6.0"
    },
    "scripts": {
        "prepare": "npx grunt",
        "browser-core-test": "npx testem ci --file tests/testem.js",
        "webaudio-test": "npx testem ci --file tests/testem-webaudio.js",
        "node-test": "node node_modules/.bin/nyc --temp-directory coverage --reporter none node tests/node-all-tests.js",
        "pretest": "npx rimraf reports instrumented",
        "test": "npm run node-test && npm run webaudio-test && npm run browser-core-test",
        "posttest": "node node_modules/.bin/nyc report --temp-directory coverage --reporter text-summary --reporter html"
    }
}
